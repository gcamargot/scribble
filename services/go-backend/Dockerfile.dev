FROM golang:1.23-alpine

WORKDIR /app

# Install development tools
RUN apk add --no-cache git postgresql-client make

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Build the application (optional, for validation)
RUN go build -o bin/server cmd/server/main.go

# Expose port
EXPOSE 8080

# Development mode - run with hot reload (requires air)
# For now, just run the built binary
CMD ["./bin/server"]
