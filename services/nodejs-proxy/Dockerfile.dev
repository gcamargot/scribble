FROM node:20-alpine

WORKDIR /app

# Install development dependencies
RUN apk add --no-cache git python3 make g++

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm ci --prefer-offline || npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Development mode - run with hot reload
CMD ["npm", "run", "dev"]
